{
    "manifest_version": 3,
    "name": "Weather Extension",
    "description": "A Chrome extension which displays the current weather",
    "version": "0.0.2",
    "action": {
        "default_popup": "./popup.html",
        "default_icon": "./clear.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "./background.js"
    },
    "permissions": ["activeTab"]
}